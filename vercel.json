{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "functions": {
    "api/**/*.ts": { "runtime": "nodejs20.x" }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/)(?!.*\\.).*)", "destination": "/index.html" }
  ]
}
