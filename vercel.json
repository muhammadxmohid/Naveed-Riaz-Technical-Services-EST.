{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": { "api/**/*.ts": { "runtime": "nodejs20.x" } },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/)(?!.*\\.).*)", "destination": "/index.html" }
  ]
}
